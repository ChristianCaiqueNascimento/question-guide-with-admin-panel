<%- include ('../../partials/header') %>
    <%- include ('../../partials/navbar') %>

        <div class="container">
            <hr>
            <h2>Artigos</h2>
            <a class="btn btn-success" href="/admin/articles/new">Novo Artigo</a>
            <hr>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Título</th>
                        <th>Categoria</th>
                        <th>Slug</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% articles.forEach(article=> { %>
                        <tr>
                            <td>
                                <%= article.id %>
                            </td>
                            <td>
                                <%= article.title %>
                            </td>
                            <td>
                                <%= article.title %>
                            </td>
                            <td>
                                <%= article.slug %>
                            </td>
                            <td>

                                <a href="/admin/articles/edit/<%= article.id %>" class="btn btn-warning">Editar</a>

                                <form action="/articles/delete" method="POST" style="display: inline;"
                                    onsubmit="confirmSelection(event, this)">
                                    <input type="hidden" name="id" value="<%= article.id %>">
                                    <button class="btn-danger btn">Excluir</button>
                                </form>

                            </td>
                            <% }) %>
                        </tr>
                </tbody>
            </table>
        </div>

        <%- include ('../../partials/footer') %>
            <script>
                function confirmSelection(event, form) {
                    event.preventDefault();
                    let decision = confirm("Você quer deletar este artigo?");
                    if (decision) {
                        form.submit();
                    }
                }
            </script>